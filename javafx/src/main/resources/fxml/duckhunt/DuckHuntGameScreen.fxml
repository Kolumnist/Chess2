<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" maxHeight="720.0" maxWidth="960.0" minHeight="720.0" minWidth="960.0" prefHeight="720.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.hhn.it.devtools.javafx.duckhunt.DuckHuntGameController">
   <children>
      <ImageView fx:id="backgroundImage" fitHeight="720.0" fitWidth="960.0" onMouseClicked="#backgroundClicked" pickOnBounds="true" smooth="false">
         <image>
            <Image url="@../../images/duckhunt/Himmel.png" />
         </image>
      </ImageView>
      <ImageView fx:id="groundImage" fitHeight="190.0" fitWidth="960.0" layoutY="533.0" pickOnBounds="true" preserveRatio="true" smooth="false">
         <image>
            <Image url="@../../images/duckhunt/NurBoden.png" />
         </image>
      </ImageView>
      <ImageView fx:id="treeImage" fitHeight="445.0" fitWidth="225.0" layoutX="81.0" layoutY="49.0" onMouseClicked="#treeClicked" pickOnBounds="true" preserveRatio="true" smooth="false">
         <image>
            <Image url="@../../images/duckhunt/Baum.png" />
         </image>
      </ImageView>
      <ImageView fx:id="bushImage" fitHeight="162.0" fitWidth="139.0" layoutX="695.0" layoutY="304.0" onMouseClicked="#bushClicked" pickOnBounds="true" preserveRatio="true" smooth="false">
         <image>
            <Image url="@../../images/duckhunt/Busch.png" />
         </image>
      </ImageView>
      <ImageView fx:id="grassImage" fitHeight="657.0" fitWidth="960.0" layoutY="-119.0" onMouseClicked="#grassClicked" pickOnBounds="true" preserveRatio="true" smooth="false">
         <image>
            <Image url="@../../images/duckhunt/NurGras.png" />
         </image>
      </ImageView>
      <VBox disable="true" layoutX="378.0" layoutY="167.0" prefHeight="161.0" prefWidth="203.0" spacing="50.0" visible="false">
         <children>
            <Button fx:id="continueButton" mnemonicParsing="false" onAction="#continueGame" prefHeight="45.0" prefWidth="200.0" style="-fx-background-color: yellowgreen; -fx-background-radius: 8;" text="CONTINUE" textFill="WHITE">
               <font>
                  <Font name="Times New Roman" size="18.0" />
               </font>
            </Button>
            <Button fx:id="exitButton" mnemonicParsing="false" onAction="#exitGame" prefHeight="45.0" prefWidth="200.0" style="-fx-background-color: indianred; -fx-background-radius: 8;" text="EXIT" textFill="WHITE">
               <font>
                  <Font name="Times New Roman" size="18.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
